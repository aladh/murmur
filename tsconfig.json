{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "babelOptions": {
      "presets": [
        ["env", {"modules": false}],
        "stage-0",
        "react"
      ]
    }
  },
  "include": ["./src/**/*"]
}