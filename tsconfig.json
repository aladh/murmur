{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ES6",
    "lib": ["DOM", "ESNext", "DOM.Iterable", "ScriptHost"],
    "moduleResolution": "Node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "allowJs": false
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "babelOptions": {
      "presets": [
        ["env", {"modules": false}],
        "stage-0",
        "react"
      ]
    }
  },
  "include": ["./src/**/*"]
}